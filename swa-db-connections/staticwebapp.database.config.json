{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
      "database-type": "mysql",
      "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
      "rest": {
        "enabled": true,
        "path": "/rest"
      },
      "graphql": {
        "allow-introspection": true,
        "enabled": true,
        "path": "/graphql"
      },
      "host": {
        "mode": "production",
        "cors": {
          "origins": [
            "http://localhost:4280",
            "https://white-bush-0cc093d10.6.azurestaticapps.net"
          ],
          "allow-credentials": false
        },
        "authentication": {
          "provider": "StaticWebApps"
        }
      }
    },
    "entities": {
      "boards": {
        "source": "boards",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "board_users": {
        "source": "board_users",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "cards": {
        "source": "cards",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "lists": {
        "source": "lists",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "users": {
        "source": "users",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      }
    }
  }
  