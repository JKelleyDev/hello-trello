{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
      "database-type": "mssql",
      "options": {
        "set-session-context": false 
      },
      "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
      "rest": {
        "enabled": true,
        "path": "/rest"
      },
      "graphql": {
        "allow-introspection": true,
        "enabled": true,
        "path": "/graphql"
      },
      "host": {
        "mode": "production",
        "cors": {
          "origins": ["http://localhost:4280"],
          "allow-credentials": false
        },
        "authentication": {
          "provider": "StaticWebApps"
        }
      }
    },
    "entities": {
      "boards": {
        "source": "trello_db.dbo.boards",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "board_users": {
        "source": "trello_db.dbo.board_users",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "cards": {
        "source": "trello_db.dbo.cards",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "lists": {
        "source": "trello_db.dbo.lists",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "users": {
        "source": "trello_db.dbo.users",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "authenticated"
          }
        ]
      }
    }
}